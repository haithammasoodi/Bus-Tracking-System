<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Admin Login & Signup</title>
<style>
/* ===== RESET ===== */
* { margin: 0; padding: 0; box-sizing: border-box; }
body { font-family: Arial, sans-serif; background: #f0f0f0; }

/* ===== HEADER ===== */
header {
  background: #2c3e50;
  color: white;
  padding: 15px 30px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
header img { height: 40px; }
header nav ul { list-style: none; display: flex; gap: 20px; }
header nav ul li a {
  color: white;
  text-decoration: none;
  font-weight: bold;
}
header nav ul li a:hover { text-decoration: underline; }

/* ===== MODAL ===== */
.cd-user-modal {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.6);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.cd-user-modal-container {
  background: white;
  width: 350px;
  padding: 20px;
  border-radius: 8px;
  position: relative;
}
.cd-user-modal-container ul {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
  border-bottom: 1px solid #ddd;
}
.cd-user-modal-container ul li {
  list-style: none;
}
.cd-user-modal-container ul li a {
  padding: 10px;
  text-decoration: none;
  color: #2c3e50;
}
.cd-user-modal-container ul li a.active {
  font-weight: bold;
  border-bottom: 2px solid #2c3e50;
}

/* ===== FORMS ===== */
.cd-form .fieldset { margin-bottom: 15px; }
.cd-form input[type="email"],
.cd-form input[type="text"],
.cd-form input[type="password"] {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}
.cd-form input[type="submit"] {
  background: #2c3e50;
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  width: 100%;
  border-radius: 4px;
}
.cd-form input[type="submit"]:hover { background: #1a242f; }
.cd-close-form {
  position: absolute;
  top: 10px; right: 10px;
  cursor: pointer;
  font-size: 20px;
}
</style>
</head>
<body>

<header role="banner">
  <div id="cd-logo"><a href="#"><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/148866/cd-logo_1.svg" alt="Logo"></a></div>
  <nav class="main-nav">
    <ul>
      <li><a class="cd-signin" href="#">Sign in</a></li>
      <li><a class="cd-signup" href="#">Sign up</a></li>
    </ul>
  </nav>
</header>

<div class="cd-user-modal">
  <div class="cd-user-modal-container">
    <span class="cd-close-form">&times;</span>
    <ul class="cd-switcher">
      <li><a href="#" class="active" data-tab="cd-login">Sign in</a></li>
      <li><a href="#" data-tab="cd-signup">New account</a></li>
    </ul>

    <!-- LOGIN -->
    <div id="cd-login" class="cd-form-section">
      <form class="cd-form">
        <p class="fieldset">
          <input id="signin-email" type="email" placeholder="E-mail">
        </p>
        <p class="fieldset">
          <input id="signin-password" type="password" placeholder="Password">
        </p>
        <p class="fieldset">
          <label><input type="checkbox" id="remember-me" checked> Remember me</label>
        </p>
        <p class="fieldset">
          <input type="submit" value="Login">
        </p>
      </form>
    </div>

    <!-- SIGNUP -->
    <div id="cd-signup" class="cd-form-section" style="display:none;">
      <form class="cd-form">
        <p class="fieldset">
          <input id="signup-username" type="text" placeholder="Username">
        </p>
        <p class="fieldset">
          <input id="signup-email" type="email" placeholder="E-mail">
        </p>
        <p class="fieldset">
          <input id="signup-password" type="password" placeholder="Password">
        </p>
        <p class="fieldset">
          <label><input type="checkbox" id="accept-terms"> I agree to the Terms</label>
        </p>
        <p class="fieldset">
          <input type="submit" value="Create account">
        </p>
      </form>
    </div>
  </div>
</div>

<script>
// Show modal
document.querySelector(".cd-signin").addEventListener("click", function(e){
  e.preventDefault();
  document.querySelector(".cd-user-modal").style.display = "flex";
  showTab("cd-login");
});
document.querySelector(".cd-signup").addEventListener("click", function(e){
  e.preventDefault();
  document.querySelector(".cd-user-modal").style.display = "flex";
  showTab("cd-signup");
});

// Close modal
document.querySelector(".cd-close-form").addEventListener("click", function(){
  document.querySelector(".cd-user-modal").style.display = "none";
});

// Switch tabs
document.querySelectorAll(".cd-switcher a").forEach(link => {
  link.addEventListener("click", function(e){
    e.preventDefault();
    document.querySelectorAll(".cd-switcher a").forEach(a => a.classList.remove("active"));
    this.classList.add("active");
    showTab(this.getAttribute("data-tab"));
  });
});

function showTab(id) {
  document.querySelectorAll(".cd-form-section").forEach(sec => sec.style.display = "none");
  document.getElementById(id).style.display = "block";
}
</script>

</body>
</html>
